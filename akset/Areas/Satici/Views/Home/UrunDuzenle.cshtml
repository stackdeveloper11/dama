
@{
    ViewBag.Title = "UrunDuzenle";
    Layout = "~/Areas/Satici/Views/Shared/_Layout.cshtml";
}


@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Areas/Satici/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h4 class="pl-4">Ürün Düzenle</h4>
</div>

<div class="row mt-4 mb-4">
    <div class="col-12">
        <div class="card panel-card pl-3">
            <div class="card-title pt-3">
                <h4>Temem Bilgi</h4>
                <hr>
            </div>
            <div class="card-body">
                <form action="#">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Ürün adı<span class="required">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-new" name="#" placeholder="Ürün Adı" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Kategori<span class="required">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-new" name="#" placeholder="Kategori">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Marka<span class="required">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-new" name="#" placeholder="Marka" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Birim<span class="required">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-new" name="#" placeholder="Birim" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Minimum Miktar<span class="required">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-new" name="#" placeholder="Minimum Miktar" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Nakit Ödeme</label>
                        <div class="col-sm-10">
                            <div class="custom-control custom-switch custom-switch-md">
                                <input type="checkbox" class="custom-control-input" id="customSwitch1">
                                <label class="custom-control-label" for="customSwitch1"></label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4 mb-4">
    <div class="col-12">
        <div class="card panel-card pl-3">
            <div class="card-title pt-3">
                <h4>Ürün Görselleri</h4>
                <hr>
            </div>
            <div class="card-body">
                <form action="#">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Fotoğraflar</label>
                        <div class="col-sm-10">
                            <div class="input-group mb-3">
                                <button class="btn input-group-button" data-target="1">Fotoğraf</button>
                                <input type="file" class="form-control form-new " data="file1">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row mt-4 mb-4">
    <div class="col-12">
        <div class="card panel-card pl-3">
            <div class="card-title pt-3">
                <h4>Ürün fiyatı + stok</h4>
                <hr>
            </div>
            <div class="card-body">
                <form action="#">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Birim Fiyat</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control form-new">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500 mt-2 mb-2" for="#">İndirim</label>
                        <div class="col-sm-8 mt-2 mb-2">
                            <input type="number" class="form-control form-new">
                        </div>
                        <div class="col-sm-2 mt-2 mb-2">
                            <select class="form-control form-new">
                                <option value="">Düz</option>
                                <option value="">Yüzde</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Stok Sayısı</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control form-new">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row mt-4 mb-4">
    <div class="col-12">
        <div class="card panel-card pl-3">
            <div class="card-title pt-3">
                <h4>Ürün Açıklaması</h4>
                <hr>
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label fw-500" for="#">Açıklama</label>
                    <div class="col-sm-10">
                        <textarea class="form-control textarea" rows="0" id="summernote"></textarea>
                    </div>
                </div>
                <div class="form-group-row pr-5">
                    <div class="col-2 float-right text-right">
                        <button class="btn btn-orange">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





