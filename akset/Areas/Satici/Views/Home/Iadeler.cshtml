
@{
    ViewBag.Title = "Iadeler";
    Layout = "~/Areas/Satici/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h4 class="pl-4">İade Talepleri</h4>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card panel-card">
            <div class="card-title">
                <div class="col-12 p-3">
                    <div class="panel-card-title">
                        <h5>Talepler</h5>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                    <th>#</th>
                    <th>Tarih</th>
                    <th>Sipariş Kimliği</th>
                    <th>Ürün</th>
                    <th>Miktar</th>
                    <th>Durum</th>
                    <th>Nedeni</th>
                    <th>Onay</th>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>16.02.2020</td>
                            <td>123456789</td>
                            <td>Mavi Ayakkabı</td>
                            <td>1</td>
                            <td>
                                <span class="badge" style="background-color: #ffc107">Bekliyor</span>
                                <span class="badge" style="background-color: #28a745">Onaylandı</span>
                            </td>
                            <td>Kalıbı Küçük</td>
                            <td>
                                <select name="" id="" class="form-control form-new">
                                    <option>Beklet</option>
                                    <option>Onayla</option>
                                </select>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
