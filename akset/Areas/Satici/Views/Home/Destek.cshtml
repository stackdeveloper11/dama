
@{
    ViewBag.Title = "Destek";
    Layout = "~/Areas/Satici/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h4 class="pl-4">Destek</h4>
</div>

<div class="row mb-4">
    <div class="col-lg-4 mx-auto">
        <a href="#" style="text-decoration:none">
            <div class="card panel-card p-5">
                <span class="d-block circle-60 d-flex align-items-center justify-content-center mx-auto">
                    <i class="las la-plus la-3x text-white"></i>
                </span>
                <span class="d-block text-center orange"><h4><button class="btn btn-secondary" data-toggle="modal" data-target="#exampleModal">Yeni Bilet Oluştur</button></h4></span>
            </div>
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card panel-card">
            <div class="card-title">
                <div class="col-12 p-3">
                    <div class="panel-card-title">
                        <h5>Biletler</h5>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                    <th>Bilet Kimliği</th>
                    <th>Gönderim Tarihi</th>
                    <th>Konu</th>
                    <th>Durum</th>
                    <th>Seçenekler</th>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>16.02.2021</td>
                            <td>Ürün Hakkında</td>
                            <td>
                                <span class="badge" style="background-color: #ffc107">Bekliyor</span>
                                <span class="badge" style="background-color: #28a745">Çözüldü</span>
                            </td>
                            <td>
                                <a href="#" class="orange-link" title="">
                                    Detayları Göster
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title strong-600 heading-5"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body px-3 pt-3">
                <form class="" action="" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-2">
                            <label>Konu</label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control mb-3" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2">
                            <label>Ayrıntılı bir açıklama sağlayın</label>
                        </div>
                        <div class="col-md-10">
                            <textarea type="text" id="summernote" class="form-control mb-3" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Fotoğraf</label>
                        <div class="col-md-10">
                            <div class="input-group mb-3">
                                <button class="btn input-group-button" data-target="1">Fotoğraf</button>
                                <input type="file" class="form-control form-new " data="file1">
                            </div>
                        </div>
                    </div>
                    <div class="text-right mt-4">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-orange">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

