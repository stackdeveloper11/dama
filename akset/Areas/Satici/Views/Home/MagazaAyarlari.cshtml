
@{
    ViewBag.Title = "MagazaAyarlari";
    Layout = "~/Areas/Satici/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h4 class="pl-4">Mağaza Ayarları </h4><span class="pt-3 pl-4"><a href="#" class="orange-link">Mağazayı Ziyaret Et</a></span>
</div>

<div class="row mt-4 mb-4">
    <div class="col-12">
        <div class="card panel-card pl-3">
            <div class="card-title pt-3">
                <h4>Temem Bilgi</h4>
                <hr>
            </div>
            <div class="card-body">
                <form action="#">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Mağaza İsmi <span class="required">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-new" name="#" placeholder="Mağaza İsmi">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Mağaza Logosu</label>
                        <div class="col-sm-10">
                            <div class="input-group mb-3">
                                <button class="btn input-group-button" data-target="1">Resim Seç</button>
                                <input type="file" class="form-control form-new " data="file1">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Mağaza Adresi <span class="required">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-new" name="#" placeholder="Mağaza Adresi">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Meta Başlığı <span class="required">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-new" name="#" placeholder="Mağaza Adresi">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Meta Açıklaması <span class="required">*</span></label>
                        <div class="col-sm-10">
                            <textarea class="form-control textarea" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-group-row">
                        <div class="col-2 float-right text-right">
                            <button class="btn btn-orange">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card panel-card pl-3">
            <div class="card-title pt-3">
                <h4>Banner Ayarı</h4>
                <hr>
            </div>
            <div class="card-body">
                <form action="#">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Afiş(1500x450)</label>
                        <div class="col-sm-10">
                            <div class="input-group mb-3">
                                <button class="btn input-group-button" data-target="2">Resim Seç</button>
                                <input type="file" class="form-control form-new " data="file2" aria-label="Default" aria-describedby="inputGroup-sizing-default">
                            </div>
                        </div>
                    </div>
                    <div class="form-group-row">
                        <div class="col-2 float-right text-right">
                            <button class="btn btn-orange">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card panel-card pl-3">
            <div class="card-title pt-3">
                <h4>Sosyal Medya Bağlantısı</h4>
                <hr>
            </div>
            <div class="card-body">
                <form action="#">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Facebook</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-new" placeholder="Facebook">
                            <small class="text-muted">Https içeren bağlantı ekle</small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Twitter</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-new" placeholder="Twitter">
                            <small class="text-muted">Https içeren bağlantı ekle</small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Google</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-new" placeholder="Google">
                            <small class="text-muted">Https içeren bağlantı ekle</small>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label fw-500" for="#">Youtube</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control form-new" placeholder="Youtube">
                            <small class="text-muted">Https içeren bağlantı ekle</small>
                        </div>
                    </div>
                    <div class="form-group-row">
                        <div class="col-2 float-right text-right">
                            <button class="btn btn-orange">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

