                                <div class="col-xs-2">
                                    @Html.DropDownList("AttributeId", null, "Seçim Yapın", htmlAttributes: new { @class = "form-control", @style = "width:100%" })
                                    @Html.ValidationMessageFor(model => model.AttributeId, "", new { @class = "text-danger" })
                                    <ul class="list-unstyled ddff" style="margin-top:10px">
                                        @{
                                            int ii = 0;
                                        }
                                        @foreach (var item in aksetDB.Create().AttributeKategoris.Include(a => a.Attribute).Where(a => a.KategoriId == Model.KategoriId).ToList())
                                        {
                                            ii++;
                                            <li class='an-@ii' style='margin-bottom:5px'>
                                                <div class='row'>
