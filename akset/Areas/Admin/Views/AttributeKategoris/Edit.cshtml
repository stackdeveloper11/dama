@model akset.data.AttributeKategori
@using System.Data.Entity
@{
    ViewBag.Title = "Edit";
    string dfd = "";
    foreach (var item in aksetDB.Create().AttributeKategoris.Include(a=>a.Attribute).Where(a => a.KategoriId == Model.KategoriId).ToList())
    {
        dfd += "," + item.Attribute.Name + "-" + item.AttributeId;
    }
    dfd = dfd.Substring(1);
}

@section pagespecific{
    <script src="~/Areas/Admin/Scripts/jquery.validate.min.js"></script>
    <script src="~/Areas/Admin/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        var attributId = "";
        var attributName = "";
        $(document).ready(function () {
            $('#KategoriId').select2().on("select2:selecting", function (e) {

            });

            $('#AttributeId').select2().on("select2:selecting", function (e) {
                attributId = e.params.args.data.id;
                attributName = e.params.args.data.text;
            });

            var responsiveHelper_dt_basic = undefined;
            var responsiveHelper_datatable_fixed_column = undefined;
            var responsiveHelper_datatable_col_reorder = undefined;
            var responsiveHelper_datatable_tabletools = undefined;
            var breakpointDefinition = {
                tablet: 1024,
                phone: 480
            };
            $('#dt_basic').dataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Turkish.json"
                },
                "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                    "t" +
                    "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
                "autoWidth": true,
                "preDrawCallback": function () {
                    // Initialize the responsive datatables helper once.
                    if (!responsiveHelper_dt_basic) {
                        responsiveHelper_dt_basic = new ResponsiveDatatablesHelper($('#dt_basic'), breakpointDefinition);
                    }
                },
                "rowCallback": function (nRow) {
                    responsiveHelper_dt_basic.createExpandIcon(nRow);
                },
                "drawCallback": function (oSettings) {
                    responsiveHelper_dt_basic.respond();
                }
            });
        })
        function findValueInArray(value, arr) {
            var result = "yok";
            for (var i = 0; i < arr.length; i++) {
                var name = arr[i].Name;
                if (name == value) {
                    result = 'var';
                    break;
                }
            }
            return result;
        }
        var liste = [];
        $(document).ready(function () {
            var ddd = "@dfd";
            if (ddd != "") {
                if (ddd.indexOf(",") != -1) {
                    for (var i = 0; i < ddd.split(",").length; i++) {
                        var nn = ddd.split(",")[i].split("-")[0];
                        var dd = ddd.split(",")[i].split("-")[1];
                        liste.push({ "Name": nn, "id": dd });
                    }
                }
                else {
                    var nn = ddd.split("-")[0];
                    var dd = ddd.split("-")[1];
                    liste.push({ "Name": nn, "id": dd });
                }
            }
        })

        function ekle() {
            if (attributName!="") {
                if (findValueInArray(attributName, liste) == "yok") {
                    var li = "<li class='an-" + (liste.length + 1) + "' style='margin-bottom:5px'><div class='row'><div class='col-xs-8'>" + (liste.length + 1) + ". " + attributName + "</div><div class='col-xs-4 text-right'><div class='btn btn-xs btn-danger' onclick='sil(\"" + (liste.length + 1) + "\",\"" + attributId + "\",\"" + attributName + "\")'>Sil</div></div>" + "</div></li>";
                    liste.push({ "Name": attributName, "id": attributId });
                  
                    $(".ddff").append(li);
                }
                else {
                    alert("Daha Önce Eklenmiş");
                }
            }
        }

        function yolla() {
            var lst = "";
            console.log(liste);
            for (var i = 0; i < liste.length; i++) {
                var name = liste[i].id;
                var d = i + 1;

                lst += "," + name;
            }
            $("#tagler").val(lst.substr(1));
            //console.log(lst.substr(1));
            $(".kyt").click();
        }

        function sil(a, b) {
            $(".an-" + a).remove();
            liste = $.grep(liste, function (value) {
                return value.Name != b;
            });
            $(".ddff").html("");
            var li = "";
            for (var i = 0; i < liste.length; i++) {
                var name = liste[i].Name;
                var d = i + 1;
                li += "<li class='an-" + d + "' style='margin-bottom:5px'><div class='row'><div class='col-xs-8'>" + d + ". " + name + "</div><div class='col-xs-4 text-right'><div class='btn btn-xs btn-danger' onclick='sil(\"" + d + "\",\"" + name + "\")'>Sil</div></div>" + "</div></li>";
            }
            $(".ddff").append(li);
        }
    </script>
}

