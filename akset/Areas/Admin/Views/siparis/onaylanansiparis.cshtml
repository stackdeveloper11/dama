                                                            </div><!-- /.modal-dialog -->
                                                        </div><!-- /.modal -->
                                                        @*<a href="/admin/siparis/delete/@item.Id" onclick="return confirm('Silmek İstediğinize Emin misiniz?')" class="btn btn-danger btn-sm">Sil</a>*@
