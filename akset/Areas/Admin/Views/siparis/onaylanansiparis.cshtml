<form action="/admin/siparis/topluiptalolansiparis" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" id="idsiler" name="idler" value="" />
    <input type="hidden" id="neresi" name="neresi" value="" />
    <input type="hidden" id="aciklamasix" name="aciklama" value="" />
    <input type="submit" id="sutlax" name="submit" value="" class="hidden" />
</form>

@section pagespecific {
    <link href="~/Areas/Admin/Scripts/dist/css/tableexport.min.css" rel="stylesheet" />
    <script src="~/Areas/Admin/Scripts/dist/js/FileSaver.min.js"></script>
    <script src="~/Areas/Admin/Scripts/dist/js/xlsx.core.min.js"></script>
    <script src="~/Areas/Admin/Scripts/dist/js/Blob.min.js"></script>
    <script src="~/Areas/Admin/Scripts/dist/js/tableexport.min.js?t=9"></script>

    <script>
        function modaliac(a) {
            $("#son").html("");
            $("#urunleri").html("");
            $.ajax({
                type: 'GET',
                url: "/admin/siparis/siparisurunleri?nosu=" + a,
                success: function (data) {
                    console.log(data);
                    var ee = "";
                    var ff = 0;
                    $.each(data, function (x, y) {
                        ee += "<tr><td>" + (x + 1) + "</td>" + "<td>" + y.urun + "</td>" + "<td>" + y.adet + "</td>" + "<td>" + y.fiyat + "</td><td>" + y.adet * y.fiyat + "</td></tr>";
                        ff += y.adet * y.fiyat;
                    });
                    $("#son").html(ff);
                    $("#urunleri").html(ee);
                    $('#siparis').modal('show');
                }
            });

        }

        function yoll(a) {
            var vb = "";
            $(".chk").each(function () {
                if ($(this).is(':checked')) {
                    vb +=","+($(this).val());
                }
            })
            vb = vb.substr(1);
            $("#idsiler").val(vb);
            $("#neresi").val(a);
            $("#aciklamasix").val($("#accx").val());
            $("#sutlax").click();
        }

        function yolla(a) {
            $("#idsi").val(a);
            $("#aciklamasi").val($(".ack-" + a).val());
            $("#sutla").click();
        }


    </script>







    <script>

        function yolla(a) {
            $("#idsi").val(a);
            $("#aciklamasi").val($(".ack-" + a).val());
            $("#sutla").click();
        }
        $(document).ready(function () {

            $("table").tableExport({
                bootstrap: true, formats: ["xlsx", "xls", "csv", "txt"], ignoreCols: [1, 9], trimWhitespace: true, fileName:"Rapor-"+new Date().toLocaleString()

            });

            var responsiveHelper_dt_basic = undefined;
            var responsiveHelper_datatable_fixed_column = undefined;
            var responsiveHelper_datatable_col_reorder = undefined;
            var responsiveHelper_datatable_tabletools = undefined;

            var breakpointDefinition = {
                tablet: 1024,
                phone: 480
            };

            $('#dt_basic').dataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Turkish.json"
                },
                "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                    "t" +
                    "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
                "autoWidth": true,

                "preDrawCallback": function () {
                    // Initialize the responsive datatables helper once.
                    if (!responsiveHelper_dt_basic) {
                        responsiveHelper_dt_basic = new ResponsiveDatatablesHelper($('#dt_basic'), breakpointDefinition);
                    }
                },
                "rowCallback": function (nRow) {
                    responsiveHelper_dt_basic.createExpandIcon(nRow);
                },
                "drawCallback": function (oSettings) {
                    responsiveHelper_dt_basic.respond();
                }
            });

        })

    </script>
}




