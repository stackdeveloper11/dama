@model ICollection<akset.data.filitre>
@using System.Data.Entity
@using akset.data
@{
    ViewBag.Title = "Index";
    int i = 0;
}
<script src="/Content/js/select2.full.min.js"></script>

<style>
    .select2-container {
        width: 100% !important;
    }
</style>

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-picture-o fa-fw "></i>
                Filitre
                <span>
                    >
                    Filitre Ekle
                </span>
            </h1>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 text-align-right">
            <div class="page-title">
                <a href="/admin/filitreozellik/filto" class="btn btn-success">Filitre Listesi</a>
            </div>
        </div>
    </div>

    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-picture-o"></i> </span>
                        <h2>Filitre Ekle</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <section class="panel default red_border horizontal_border_1 h2" style="position:relative;margin-bottom: 50px;">
                                <div class="block-web">

                                    <div class="porlets-content">
                                        <form action="/Admin/filitreozellik/filto" class="form-horizontal" method="post">
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <input type="hidden" name="nere" value="ekle" />
                                            <div class="form-group">
                                                <label class="control-label col-md-2" for="filitre" style="font-size:13px;padding:0;line-height: 32px;">Filitre</label>
                                                <div class="col-sm-10 col-xs-12">
                                                    <div class="input-group">
                                                        <input type="text" name="filitre" class="form-control" id="form-group-input" placeholder="Filitre Adı Yazınız!">
                                                        <div class="input-group-btn">
                                                            <input type="submit" class="btn btn-success" name="submit" value="Ekle" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 col-xs-12 control-label" for="form-group-input" style="font-size:13px;padding:0;line-height: 32px;">Çoklu Seçim</label>
                                                <div class="col-sm-10 col-xs-12">
                                                    @Html.CheckBox("multi")
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 col-xs-12 control-label" for="form-group-input" style="font-size:13px;padding:0;line-height: 32px;">Adetlimi</label>
                                                <div class="col-sm-10 col-xs-12">
                                                    <select class="form-control" name="adetlimi">
                                                        <option value="true" selected="selected">Evet</option>
                                                        <option value="false">Hayır</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </form>
                                        <table class="table table-striped table-hover table-condensed table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Çoklu Seçim</th>
                                                    <th>Filitre</th>
                                                    <th>Adetlimi</th>
                                                    <th>#</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    i++;
                                                    <tr>
                                                        <td>@i.ToString()</td>
                                                        <form action="/Admin/filitreozellik/filto" method="post">
                                                            <td>@Html.CheckBox("multi", item.multi)</td>
                                                            <td>
                                                                @Html.AntiForgeryToken()
                                                                <div class="input-group">
                                                                    <input type="text" name="filitre" value="@item.adi" class="form-control" />
                                                                    <div class="input-group-btn input-group-sm">
                                                                        <input type="hidden" name="Id" value="@item.Id" />
                                                                        <input type="hidden" name="nere" value="duzenle" />
                                                                        <input type="submit" class="btn btn-success" name="submit" value="Düzenle" />
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="input-group">
                                                                    <select class="form-control" name="adetlimi">
                                                                        @if (item.adetlimi)
                                                                        {
                                                                            <option value="true" selected="selected">Evet</option>
                                                                            <option value="false">Hayır</option>
                                                                        }
                                                                        else
                                                                        {
                                                                            <option value="true">Evet</option>
                                                                            <option value="false" selected="selected">Hayır</option>
                                                                        }
                                                                    </select>
                                                                    <div class="input-group-btn input-group-sm">
                                                                        <input type="hidden" name="Id" value="@item.Id" />
                                                                        <input type="hidden" name="nere" value="duzenle" />
                                                                        <input type="submit" class="btn btn-success" name="submit" value="Düzenle" />
                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </form>
                                                        <td>
                                                            <div class="btn-group">
                                                                <a href="/Admin/ozelliks/Index/@item.Id" target="_blank" class="btn btn-primary">@item.adi Listesi</a>
                                                                @if (item.ozelliks.FirstOrDefault() == null)
                                                                {
                                                                    <a href="/admin/filitreozellik/delete/@item.Id" class="btn btn-danger" onclick="return confirm('Silmek istediğinize Emin misiniz?')">Sil</a>
                                                                }
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </section>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->
