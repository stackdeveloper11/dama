@model akset.data.ozellik
@using System.Data.Entity
@{
    ViewBag.Title = "Index";
    int iss = Convert.ToInt32(ViewBag.Idsi.ToString());
}

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-picture-o fa-fw "></i>
               Filitre Özellik
                <span>
                    >
                    Filitre Özellik Ekle
                </span>
            </h1>
        </div>
    </div>

    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-picture-o"></i> </span>
                        <h2>Filitre Özellik Ekle</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <section class="panel default red_border horizontal_border_1 h2" style="position:relative;margin-bottom: 50px;">
                                <div class="block-web">
                                    <div class="porlets-content">
                                        <div class="porlets-content">
                                            @using (Html.BeginForm())
                                            {
                                                @Html.AntiForgeryToken()

                                                <div class="form-horizontal">

                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <input type="hidden" name="filitreId" value="@iss" />
                                                    <input type="hidden" name="nere" value="ekle" />
                                                    <div class="form-group">
                                                        <label class="control-label col-md-2" for="adi" style="font-size: 13px;padding: 0;line-height: 32px;">Özellik Adı</label>
                                                        <div class="col-md-10">
                                                            @Html.EditorFor(model => model.adi, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.adi, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="col-md-offset-2 col-md-10">
                                                            <input type="submit" value="Ekle" class="btn btn-success" />
                                                        </div>
                                                    </div>
                                                </div>
                                            }

                                            <table class="table table-striped table-hover table-condensed table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            Özellik Adı
                                                        </th>
                                                        <th>#</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in akset.data.aksetDB.Create().ozelliks.Include(o => o.filitre).Where(a => a.filitreId == iss).ToList())
                                                    {
                                                        <tr>
                                                            <td>
                                                                <form action="/Admin/ozelliks/Index/@item.Id" method="post">
                                                                    @Html.AntiForgeryToken()
                                                                    <input type="hidden" name="nere" value="duzenle" />
                                                                    <input type="hidden" name="Id" value="@item.Id" />
                                                                    <input type="hidden" name="filitreId" value="@item.filitreId" />
                                                                    <div class="input-group">
                                                                        <input type="text" name="adi" class="form-control" value="@item.adi" />
                                                                        <div class="input-group-btn">
                                                                            <input type="submit" name="submit" class="btn btn-success" value="Düzenle" />
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </td>
                                                            <td>
                                                                <form action="/Admin/ozelliks/Index/@item.Id" method="post">
                                                                    @Html.AntiForgeryToken()
                                                                    <input type="hidden" name="nere" value="sil" />
                                                                    <input type="hidden" name="Id" value="@item.Id" />
                                                                    <input type="hidden" name="filitreId" value="@item.filitreId" />
                                                                    <input type="submit" name="submit" onclick="return confirm('Silmek istediğinize Emin misiniz?')" class="btn btn-danger" value="Sil" />
                                                                </form>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->

