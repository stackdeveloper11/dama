@model akset.ViewModel.supview
@using System.Data.Entity
<link href="~/css/all.min.css" rel="stylesheet" />
<script src="~/js/all.min.js"></script>
<style>
    .dd {
        position: relative;
        display: block;
        margin: 0;
        padding: 0;
        list-style: none;
        font-size: 13px;
        line-height: 20px;
    }

    .dd-list {
        display: block;
        position: relative;
        margin: 0;
        padding: 0;
        list-style: none;
    }

        .dd-list .dd-list {
            padding-left: 30px;
        }

    .dd-collapsed .dd-list {
        display: none;
    }

    .dd-item, .dd-empty, .dd-placeholder {
        display: block;
        position: relative;
        margin: 0;
        padding: 0;
        min-height: 20px;
        font-size: 13px;
        line-height: 20px;
    }

    .dd-handle {
        display: block;
        height: 34px;
        margin: 5px 0;
        padding: 6px 10px;
        color: white;
        text-decoration: none;
        font-weight: 600;
        border: 1px solid #CCC;
        background: #0088cc;
        -webkit-border-radius: 3px;
        border-radius: 3px;
        box-sizing: border-box;
        -moz-box-sizing: border-box;
    }

        .dd-handle:hover {
            color: #cccccc;
            background: #fff;
        }

    .dd-item > button {
        display: block;
        position: relative;
        cursor: pointer;
        float: left;
        width: 25px;
        height: 20px;
        margin: 7px 0;
        padding: 0;
        text-indent: 100%;
        white-space: nowrap;
        overflow: hidden;
        border: 0;
        background: transparent;
        font-size: 12px;
        line-height: 1;
        text-align: center;
        font-weight: bold;
    }

        .dd-item > button:before {
            content: '+';
            display: block;
            position: absolute;
            width: 16px;
            text-align: center;
            text-indent: 0;
            background: white;
            border-radius: 7px;
            padding: 2px;
            margin-left: 5px;
            margin-top: -2px;
        }

        .dd-item > button[data-action="collapse"]:before {
            content: '-';
            background: yellow !important;
        }

    .dd-placeholder {
        margin: 5px 0;
        padding: 0;
        min-height: 30px;
        background: white;
        border: 1px dashed #cccccc;
        box-sizing: border-box;
        -moz-box-sizing: border-box;
    }

    .dd-empty {
        margin: 5px 0;
        padding: 0;
        min-height: 30px;
        background: #f2fbff;
        border: 1px dashed #b6bcbf;
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        border: 1px dashed #bbb;
        min-height: 100px;
        background-color: #e5e5e5;
        background-image: -webkit-linear-gradient(45deg, white 25%, transparent 25%, transparent 75%, white 75%, white), -webkit-linear-gradient(45deg, white 25%, transparent 25%, transparent 75%, white 75%, white);
        background-image: -moz-linear-gradient(45deg, white 25%, transparent 25%, transparent 75%, white 75%, white), -moz-linear-gradient(45deg, white 25%, transparent 25%, transparent 75%, white 75%, white);
        background-image: linear-gradient(45deg, white 25%, transparent 25%, transparent 75%, white 75%, white), linear-gradient(45deg, white 25%, transparent 25%, transparent 75%, white 75%, white);
        background-size: 60px 60px;
        background-position: 0 0, 30px 30px;
    }

    .dd-dragel {
        position: absolute;
        pointer-events: none;
        z-index: 9999;
    }

        .dd-dragel > .dd-item .dd-handle {
            margin-top: 0;
        }

        .dd-dragel .dd-handle {
            -webkit-box-shadow: 2px 4px 6px 0 rgba(0, 0, 0, 0.1);
            box-shadow: 2px 4px 6px 0 rgba(0, 0, 0, 0.1);
        }

    li {
        cursor: pointer;
    }

    button + .dd-handle:hover {
        color: white !important;
    }

    button + .dd-handle {
        background: #0088cc !important;
        color: white !important;
        border: 1px solid #171717;
        padding-left: 30px;
    }

    .btn-group.pull-right {
        position: absolute;
        z-index: 9;
        right: 0;
        top: 0;
    }
</style>

@section pagespecific{
    <script src="/Areas/Admin/Content/jquery.nestable.js"></script>
    <script>
        $(document).ready(function () {
            var updateOutput = function (e) {
                var list = e.length ? e : $(e.target),
                    output = list.data('output');
                if (window.JSON) {
                    //   output.val(window.JSON.stringify(list.nestable('serialize'),null,2));//, null, 2));
                } else {
                    //   output.val('JSON browser support required for this demo.');
                }
            };
            // activate Nestable for list 1
            $('#nestable').nestable({
                group: 1,
                onDragFinished: function (currentNode, parentNode) {
                    var ken = currentNode.getAttribute("data-id");
                    //  console.log($("li[data-id='" + ken + "']").index());
                    var seb = null;
                    if (parentNode != null) {
                        seb = parentNode.getAttribute("data-id");
                    }
                    var things = [];
                    $(".dd-item").each(function (index) {
                        $(this).attr("data-sira", index);
                        var test = [$(this).attr("data-id") + "-" + $(this).attr("data-sira")];
                        things.push(test);
                        // console.log($(this).attr("data-sira"));
                    });
                    //  console.log(things);
                    //  console.log($("li[data-id='" + ken + "']").attr("data-sira"));
                    //    console.log(window.JSON.stringify($('#nestable').nestable('serialize'), null, 2));
                    $.ajax({
                        url: "/Admin/supmenus/katdegis",
                        type: "POST",
                        cache: false,
                        contentType: "application/json; charset=utf-8",
                        data: "{ idsi: '" + ken + "', parenti: '" + seb + "', jsonu: '" + things + "' }",
                        dataType: "json",
                        success: function (data) {

                        },
                        complate: function () {
                        },
                        error: function () {
                        }
                    })
                }
            })
            .on('change', updateOutput);
            // output initial serialised data
            $('.dd').nestable('collapseAll');
        });
    </script>
}

@helper PrintCategories(int id)
{
    akset.data.aksetDB db = new akset.data.aksetDB();
    <ol class="dd-list" id="nestable">
        @foreach (var item in Model.altKategorileri.Where(a => a.parentId == id))
        {
            <li class="dd-item" data-id="@item.Id" data-sira="@item.sira">
                @if (Model.altKategorileri.Where(a => a.parentId == item.Id).ToList().Count() > 0)
                {
                    <div class="dd-handle"> @item.adi</div>
                    <a href='/admin/supmenus/edit/@item.Id' class='btn btn-success btn-xs' style="float: right;margin-top: -35px;margin-right: 4px;">Düzenle</a>
                }
                else
                {
                    <div class="dd-handle">@item.adi</div>
                    <div class='btn-group' style="float: right;margin-top: -35px;margin-right: 4px;">
                        <a href='/admin/supmenus/edit/@item.Id' class='btn btn-success btn-xs'>Düzenle</a>
           <input type="submit" formaction='@string.Concat("/admin/supmenus/Delete/",item.Id)' class='md-btn md-btn-mini md-btn-danger btn btn-danger btn-xs' value="Sil" onclick="return confirm('Silmek İstediğinize Emin misiniz?');" />
                    </div>
                }

                @if (Model.altKategorileri.Where(a => a.parentId == item.Id).ToList().Count() > 0)
                {
                    @PrintCategories(item.Id)
                }
            </li>
        }
    </ol>
}

