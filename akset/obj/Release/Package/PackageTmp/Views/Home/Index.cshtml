<script>
    $(document).ready(function () {
        $('[data-countdown]').each(function () {
            $(this).countdown($(this).attr("data-countdown"), function (event) {
                if (event.strftime("%D")=="00") {
                    $(this).html('<i class="fa fa-clock-o"></i> Bitiş Zamanı: ' + event.strftime('%H:%M:%S'));
                }
                else {
                    $(this).html('<i class="fa fa-clock-o"></i> Bitiş Zamanı: ' + event.strftime('%D Gün %H:%M:%S'));
                }
            });
        });
    });
</script>
